<?xml version="1.0" encoding="windows-1251" ?>
<game_dialogs>
    <dialog id="give_cooking_recipes_dialog">
		<precondition>dialogs_cooking_recipes.not_has_recipes</precondition>
        <phrase_list>
            <phrase id="0">
                <text>st_give_cooking_recipes_dialog_0</text>
				<next>1</next>
            </phrase>
			<phrase id="1">
                <text>st_give_cooking_recipes_dialog_1</text>
				<action>dialogs_cooking_recipes.give_recipes</action>
            </phrase>
        </phrase_list>
    </dialog>
	
	<dialog id="more_cooking_recipes_dialog">
        <has_info>how_to_get_more_recipes</has_info>
		<phrase_list>
            <phrase id="0">
                <text>st_more_cooking_recipes_dialog_0</text>
				<next>1</next>
            </phrase>
			<phrase id="1">
                <text>st_more_cooking_recipes_dialog_1</text>
            </phrase>
        </phrase_list>
    </dialog>
</game_dialogs>
